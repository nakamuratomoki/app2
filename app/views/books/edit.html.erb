

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    
      <h5>Editing Book</h5>
      
      <%= form_for @book do |f| %>
        <div class="field row">
          <label>Title</label>
          <%= f.text_field :title, :class=>"col-xs-12" %>
        </div>
        <div class="field row">
          <label>Opinion</label>
          <%= f.text_area :body, :class=>"col-xs-12" %>
        </div>
        <div class="field row">
          <%= f.submit 'Update Book', :class=>"btn btn-primary col-xs-12" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book), :style=>"color:#666;" %> |
      <%= link_to "Back", books_path, :style=>"color:#666;" %>
    
    </div>
    
    <div class="col-md-3"></div>
  </div>
</div>
