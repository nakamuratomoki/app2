<h2>User info</h2>
<table class='table'>
    <tr>
        <div class="block-image">
            <div class="view view-first">
            
            <%= attachment_image_tag @user, :profile_image ,:fill,100,100, fallback: "noimage.jpg" %>
            
            </div>
        </div>
    </tr>
    <tr>
        <th>name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
</table>

<div class='row'>
    <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/<%= @user.id %>/edit"></a>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>


<div class="row">
    <div class="col-xs-12">
        <div class="form-group has-icon">
            <label class="control-label sr-only"></label>
            <%= f.text_field :title, class:"form-control", placeholder:"" %>
            <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
        </div>
    </div>
    <div class="col-xs-12">
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"" %>
    </div>
</div>
<hr>
<%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>