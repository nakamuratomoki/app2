
<%= form_for(@user) do |f| %>
    <div class="container">
        <div class="row">
    <h2>User info</h2>
        <h4>Name</h4>
      <%= f.text_field :name %>
  <br>
        <h4>Image</h4>
      <%= f.attachment_field :profile_image%>  
  <br>
  <h4>Introduction</h4>
      <%= f.text_area :introduction%>
  <br>
  <div class="actions">
  <%= f.submit "Update User"%>
  </div>
<% end %>
</div>
</div>